{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "lib": ["es2017"],
    "module": "es2015",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "noUnusedLocals": true,
    "rootDirs": ["src", "stories"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/Components/ScrollPicker/ScrollPicker.js",
    "src/Components/ScrollPicker/SmoothPicker/SmoothPicker.js",
    "storybook/**/*.ts",
    "storybook/**/*.tsx"
  ],
  "exclude": ["__tests__/**/*-test.ts"]
}
